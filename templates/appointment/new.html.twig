{% extends 'base.html.twig' %}

{% block title %}Nouveau rendez-vous
{% endblock %}

{% block javascripts %}
	{% block importmap %}
		{{ importmap(['app']) }}
	{% endblock %}
{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
	<div class="alert alert-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert" aria-label="Success message">
		{{ message }}
	</div>
{% endfor %}

{% for message in app.flashes('error') %}
	<div class="alert alert-danger bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert" aria-label="Error message">
		{{ message }}
	</div>
{% endfor %}

<div
	class="container mx-auto min-h-screen mt-20 sm:mt-24 md:mt-28 lg:mt-32 xl:mt-36 mb-12 sm:mb-16 md:mb-20 lg:mb-24 xl:mb-28 px-4 sm:px-6 md:px-8">
	<div class="bg-white p-4 sm:p-6 rounded-lg shadow-md">
		<h1 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8 text-black text-center">Cr√©er un nouveau rendez-vous</h1>
		{{ include('appointment/_form.html.twig') }}
	</div>
</div>


{% endblock %}

