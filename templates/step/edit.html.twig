{% extends 'base.html.twig' %}

{% block title %}Modifier l'Étape
{% endblock %}

{% block javascripts %}
	{% block importmap %}
		{{ importmap(['app']) }}
	{% endblock %}
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-20 p-6 min-h-screen bg-white rounded-lg shadow-lg">
		<h1 class="text-2xl font-bold mb-6">Modifier l'Étape</h1>

		<div
			class="flex flex-col space-y-4">
			<!-- Formulaire de mise à jour -->
			<div>
				{{ include('step/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
			</div>

			<!-- Lien de retour à la liste -->
			<a href="{{ path('app_step_index') }}" class="text-blue-500 hover:underline">
				&larr; Retour à la liste
			</a>

			<!-- Formulaire de suppression -->
			<div>
				{{ include('step/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}

