{% extends 'base.html.twig' %}

{% block javascripts %}
	{% block importmap %}
		{{ importmap(['app']) }}
	{% endblock %}
{% endblock %}

{% block body %}
	<div class="max-w-2xl p-8 bg-white shadow-lg rounded-lg mt-28 mb-16 px-4 sm:px-6 md:px-8 mx-4 sm:mx-6 md:mx-8">
		<!-- Added responsive padding: px-4 for mobile, sm:px-6 for small screens, md:px-8 for medium screens -->
		<h1 class="text-3xl text-center font-bold mb-8">Cr√©er un nouvel utilisateur</h1>
		<!-- Increased font size and spacing -->

		{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
		<!-- Increased overall space between form elements -->

		<!-- User Information Fields -->
			<div
			class="form-group space-y-2"> <!-- Added more space between form groups -->
			{{ form_label(form.email, null, {'attr': {'class': 'block text-black font-medium mb-2'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'w-full border border-bg-custom-blue rounded-md p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-bg-custom-blue text-black'}}) }}
			{{ form_errors(form.email) }}
		</div>

		<div class="form-group space-y-2">
			{{ form_label(form.roles, null, {'attr': {'class': 'block text-black font-medium mb-2'}}) }}
			{{ form_widget(form.roles, {'attr': {'class': 'w-full border border-bg-custom-blue rounded-md p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-bg-custom-blue text-black'}}) }}
			{{ form_errors(form.roles) }}
		</div>

		<div class="form-group space-y-2">
			{{ form_label(form.teams, null, {'attr': {'class': 'block text-black font-medium mb-2'}}) }}
			{{ form_widget(form.teams, {'attr': {'class': 'w-full border border-bg-custom-blue rounded-md p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-bg-custom-blue text-black'}}) }}
			{{ form_errors(form.teams) }}
		</div>

		<div class="form-group space-y-2">
			{{ form_label(form.password, null, {'attr': {'class': 'block text-black font-medium mb-2'}}) }}
			{{ form_widget(form.password, {'attr': {'class': 'w-full border border-bg-custom-blue rounded-md p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-bg-custom-blue text-black'}}) }}
			{{ form_errors(form.password) }}
		</div>

		<!-- Profile Information Fields -->
		<div
			class="space-y-6 mt-8">
			<!-- Added more top margin for better separation -->
			{% for field in [form.profile.name, form.profile.postname, form.profile.firstname, form.profile.genre, form.profile.phone, form.profile.address, form.profile.date_of_birth, form.profile.date_inscrit] %}
				<div
					class="form-group space-y-2">
					<!-- Added space between form groups -->
					{{ form_label(field, null, {'attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
					{{ form_widget(field, {'attr': {'class': 'w-full border border-bg-custom-blue rounded-md p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-bg-custom-blue text-gray-900'}}) }}
					{{ form_errors(field) }}
				</div>
			{% endfor %}
		</div>

		<!-- Passport Information Fields -->
		<div
			class="space-y-6 mt-8">
			<!-- Added more top margin for better separation -->
			{% for field in [form.profile.passport.number_passport, form.profile.passport.date_expiration, form.profile.passport.nationalite, form.profile.passport.profession] %}
				<div
					class="form-group space-y-2">
					<!-- Added space between form groups -->
					{{ form_label(field, null, {'attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
					{{ form_widget(field, {'attr': {'class': 'w-full border border-bg-custom-blue rounded-md p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-bg-custom-blue text-gray-900'}}) }}
					{{ form_errors(field) }}
				</div>
			{% endfor %}
		</div>

		<!-- Action Buttons -->
		<div
			class="flex justify-between mt-8">
			<!-- Added more top margin for better separation -->
<a href="{{ path('app_adminpage') }}" class="bg-custom-blue text-white py-2 px-4 rounded hover:text-custom-hover transition duration-300">Annuler</a>

<button type="submit" class="bg-custom-blue text-white py-2 px-4 rounded hover:text-custom-hover transition duration-300">Ajouter</button>

		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}

