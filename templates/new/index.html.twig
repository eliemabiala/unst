		<h1 class="text-2xl text-center font-bold mb-6">Cr√©er un nouvel utilisateur</h1>

		{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

		<div class="form-group">
			{{ form_label(form.email, null, {'attr': {'class': 'block text-black font-medium mb-1'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'w-full border border-[#14213D] rounded-md p-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-[#14213D] text-black'}}) }}
