{% extends 'base.html.twig' %}

{% block title %}User List
{% endblock %}

{% block body %}
	<!-- Display Flash Messages -->
	{% for message in app.flashes('success') %}
		<div class="alert alert-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
			{{ message }}
		</div>
	{% endfor %}

	<!-- Main container with top spacing adjusted -->
	<div
		class="container mx-auto px-4 py-8 mt-20 md:mt-16 lg:mt-24">


		<!-- Statistics Cards -->
		<div
			class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-8">
			<!-- Admin Card -->
			<div class="bg-gray-200 rounded-lg shadow-md p-4 flex items-center">
				<div class="bg-[#14213D] text-white rounded-l-lg p-4">
					<img src="{{ asset('img/admin/iconadmin.png') }}" alt="Icon Admin" class="w-8 h-8">
				</div>
				<div class="ml-4">
					<p class="text-sm font-medium">Effectif ADMIN</p>
					<p class="text-3xl font-bold">{{ totalAdmin }}</p>
				</div>
			</div>

			<!-- User Card -->
			<div class="bg-gray-200 rounded-lg shadow-md p-4 flex items-center">
				<div class="bg-[#14213D] text-white rounded-l-lg p-4">
					<img src="{{ asset('img/admin/iconuser.png') }}" alt="Icon User" class="w-8 h-8">
				</div>
				<div class="ml-4">
					<p class="text-sm font-medium">Effectif USER</p>
					<p class="text-3xl font-bold">{{ totalUser }}</p>
				</div>
			</div>

			<!-- Coach Card -->
			<div class="bg-gray-200 rounded-lg shadow-md p-4 flex items-center">
				<div class="bg-[#14213D] text-white rounded-l-lg p-4">
					<img src="{{ asset('img/admin/iconcoache.png') }}" alt="Icon Coach" class="w-8 h-8">
				</div>
				<div class="ml-4">
					<p class="text-sm font-medium">Effectif COACH</p>
					<p class="text-3xl font-bold">{{ totalCoach }}</p>
				</div>
			</div>
		</div>

		<!-- Header and Action Buttons -->
		<div class="flex space-x-5 flex-col sm:flex-row justify-between items-center mb-6">
			<h1 class="text-2xl font-bold mb-4 sm:mb-0 order-2 sm:order-1">Liste des utilisateurs</h1>
			<div class="flex space-x-2 order-1 sm:order-2">
				<a href="{{ path('app_documents_index') }}" class="bg-[#14213D] text-white py-2 px-4 rounded hover:text-[#b49047] transition duration-300">
					Documents envoyés
				</a>
				<a href="{{ path('app_new') }}" class="bg-[#14213D] text-white py-2 px-4 rounded hover:text-[#b49047] transition duration-300">
					Ajouter un utilisateur
				</a>
				<a href="{{ path('app_appointment_index') }}" class="bg-[#14213D] text-white py-2 px-4 rounded hover:text-[#b49047] transition duration-300" aria-label="Voir les rendez-vous">Voir les rendez-vous

				</a>


			</div>
		</div>

		<!-- User Table with responsive overflow -->
		<div class="overflow-x-auto max-h-96">
			<table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
				<thead class="bg-gray-100 sticky top-0 z-10">
					<tr class="border-b">
						<th class="py-4 px-4 text-left text-gray-700">Nom</th>
						<th class="py-4 px-4 text-left text-gray-700">Prénom</th>
						<th class="py-4 px-4 text-left text-gray-700 hidden md:table-cell">Sexe</th>
						<th class="py-4 px-4 text-left text-gray-700 hidden md:table-cell">Téléphone</th>
						<th class="py-4 px-4 text-left text-gray-700 hidden md:table-cell">Email</th>
						<th class="py-2 px-4">
							<form
								class="max-w-xs mx-auto">
								<!-- Still using max-w-xs for a narrow width -->
								<label for="default-search" class="mb-1 text-sm font-medium sr-only">Search</label>
								<!-- Reduced margin bottom -->
								<div class="relative">
									<div
										class="absolute inset-y-0 left-0 flex items-center pointer-events-none"><!-- Icon position -->

									</div>
									<input
									type="search" id="default-search" class="w-full p-1 text-black rounded-lg border border-[#14213D] focus:outline-none" placeholder="Nom d'utilisateur" required/>
									<!-- Padding adjusted -->
									<button type="submit" class="text-white absolute right-1 top-1 bg-[#e74c3c] border-2 font-medium rounded-lg text-xs px-2 py-1">
										Search
									</button>
								</div>
							</form>
						</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						{% set profile = user.profile %}
						{% set passport = profile.passport %}
						<tr class="border-b hover:bg-gray-50 cursor-pointer" role="button" tabindex="0" onclick="window.location='{{ path('app_user_profile', { id: user.id }) }}';">
							<td class="py-2 px-4">{{ profile.name }}</td>
							<td class="py-2 px-4">{{ profile.firstname }}</td>
							<td class="py-2 px-4 hidden md:table-cell">{{ profile.genre.value ?? '' }}</td>
							<td class="py-2 px-4 hidden md:table-cell">{{ profile.phone }}</td>
							<td class="py-2 px-4 hidden md:table-cell">{{ user.email }}</td>
							<td class="py-2 px-4">
								<div class="flex space-x-2">
									<a href="{{ path('app_user_profile', { id: user.id }) }}">
										<img src="{{ asset('img/admin/invisible.png') }}" alt="Icon invisible" title="Voir plus" aria-label="Invisible appuiyé pour voir plus" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
									</a>
									<a href="{{ path('app_edit', { id: user.id }) }}">
										<img src="{{ asset('img/admin/messager.png') }}" alt="Icon message" title="Envoyer un message" aria-label="Envoyer un message" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
									</a>
									<a href="{{ path('app_appointment_user', {id: user.id}) }}">
										<img src="{{ asset('img/admin/addrdv.png') }}" alt="voir tous rendez-vous" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
									</a>


									<a href="{{ path('app_appointment_new', {'id': user.id}) }}">
										<img src="{{ asset('img/admin/edit.png') }}" alt="Icon edit" title="Modifier le profil" aria-label="Modifier le profil" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
									</a>
									<form action="{{ path('app_user_delete', { id: user.id }) }}" method="post" style="display:inline;">
										<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
										<button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" class="text-red-600">
											<img src="{{ asset('img/admin/delete.png') }}" alt="Icon delete" title="Supprimer l'utilisateur" aria-label="Supprimer l'utilisateur" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
										</button>
									</form>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
