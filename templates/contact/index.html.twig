{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center py-6">
		<div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
			<h1 class="text-2xl font-bold mb-6 text-center">Contactez-nous</h1>

			{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

			<div>
				{{ form_label(form.name, null, {'label_attr': {'class': 'block text-gray-700'}}) }}
				{{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.name) }}
			</div>

			<div>
				{{ form_label(form.email, null, {'label_attr': {'class': 'block text-gray-700'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.email) }}
			</div>

			<div>
				{{ form_label(form.subject, null, {'label_attr': {'class': 'block text-gray-700'}}) }}
				{{ form_widget(form.subject, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.subject) }}
			</div>

			<div>
				{{ form_label(form.message, null, {'label_attr': {'class': 'block text-gray-700'}}) }}
				{{ form_widget(form.message, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.message) }}
			</div>

			<div class="text-center mt-6">
				<button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Envoyer</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

