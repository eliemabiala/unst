{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<!-- Container -->
	<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center py-6">
		<div class="bg-white rounded-lg p-8 w-full max-w-4xl mx-auto">
			<p class="text-center text-gray-700 mb-8">
				C'est toujours une joie pour nous de rencontrer et d'accueillir de nouvelles personnes dans notre église ! 
				                Si vous avez besoin d'une information, d'un conseil ou que vous souhaitez nous rencontrer, n'hésitez pas à nous écrire.
			</p>

			<!-- Contact Form Section -->
			{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

			<div class="mb-4">
				{{ form_label(form.name, null, {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
				{{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.name, {'attr': {'class': 'text-red-600 mt-1'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.email, null, {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.email, {'attr': {'class': 'text-red-600 mt-1'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.subject, null, {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
				{{ form_widget(form.subject, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.subject, {'attr': {'class': 'text-red-600 mt-1'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.message, null, {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
				{{ form_widget(form.message, {'attr': {'class': 'w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.message, {'attr': {'class': 'text-red-600 mt-1'}}) }}
			</div>

			<div class="text-center mt-6">
				<button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">Envoyer</button>
			</div>

			{{ form_end(form) }}

			<!-- Contact Information and Map Section -->
			<div
				class="flex flex-col md:flex-row mt-8 space-y-8 md:space-y-0 md:space-x-8">
				<!-- Bloc Google Maps -->
				<div class="w-full md:w-2/3 bg-white p-6 rounded-lg shadow-lg">
					<iframe src="https://www.google.com/maps/embed?pb=YOUR_EMBED_LINK_HERE" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
				</div>

				<!-- Bloc Informations de Contact -->
				<div class="w-full md:w-1/3 bg-white shadow-lg rounded-lg p-6">
					<h3 class="text-xl font-semibold mb-4">Secrétariat</h3>
					<p>
						<strong>Adresse:</strong><br>
						47 rue des Couronnes, 75020 Paris, France
					</p>
					<p class="mt-2">
						<strong>Heures d'ouverture:</strong><br>
						Du lundi au vendredi: 9h - 18h<br>
						Samedi: 9h - 13h
					</p>
					<p class="mt-4">
						<strong>Email:</strong><br>
						contact@domaine.com
					</p>
					<p class="mt-2">
						<strong>Téléphone:</strong><br>
						+33 7 58 14 90 24<br>
						+243 858 873 289<br>
						+243 828 169 920
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

