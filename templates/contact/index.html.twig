{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block javascripts %}
	{% block importmap %}
		{{ importmap(['app']) }}
	{% endblock %}
{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col justify-center py-8 mt-20 sm:mt-24 md:mt-28 lg:mt-32 px-4 sm:px-6 md:px-8">



		<div
			class="bg-gray-50 rounded-lg p-6 sm:p-8 md:p-10 w-full max-w-5xl mx-auto space-y-8">

			<!-- Message d'introduction -->
			<div class="text-center">
				<h1 class="text-3xl font-semibold text-black mb-4">Nous contacter</h1>
				<p class="text-lg text-black">
					Pour toute question ou demande d'information, contactez-nous par téléphone, email, ou via notre formulaire en ligne. Nous vous répondrons rapidement.
				</p>
			</div>

			<!-- Section du formulaire de contact avec une meilleure présentation -->
			<div class="bg-gray-50 p-6 sm:p-8 rounded-lg">
				{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

				<!-- Champ Nom -->
				<div>
					{{ form_label(form.name, null, {'label_attr': {'class': 'block text-black font-semibold mb-2'}}) }}
					{{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#14213D]'}}) }}
					{{ form_errors(form.name, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<!-- Champ Email -->
				<div>
					{{ form_label(form.email, null, {'label_attr': {'class': 'block text-black font-semibold mb-2'}}) }}
					{{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#14213D]'}}) }}
					{{ form_errors(form.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<!-- Champ Sujet -->
				<div>
					{{ form_label(form.subject, null, {'label_attr': {'class': 'block text-black font-semibold mb-2'}}) }}
					{{ form_widget(form.subject, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#14213D]'}}) }}
					{{ form_errors(form.subject, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<!-- Champ Message -->
				<div>
					{{ form_label(form.message, null, {'label_attr': {'class': 'block text-black font-semibold mb-2'}}) }}
					{{ form_widget(form.message, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#14213D]'}}) }}
					{{ form_errors(form.message, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<!-- Case à cocher pour accepter les conditions générales -->
				<div class="form-group">
					<label>
						{{ form_widget(form.termsAccepted) }}
						J'accepte les termes et
						<a href="{{ path('terms_conditions') }}" class="text-blue-600 hover:underline">conditions</a>.
					</label>
					{{ form_errors(form.termsAccepted) }}
				</div>

				<!-- Bouton Envoyer -->
				<div class="text-center">
					<button type="submit" class="bg-[#14213D] text-white py-2 px-4 rounded hover:text-[#b49047] transition duration-300" aria-label="Bouton Envoyer">
						Envoyer
					</button>
				</div>

				{{ form_end(form) }}
			</div>

			<!-- Informations de contact et section Google Maps -->
			<div
				class="flex flex-col md:flex-row space-y-6 md:space-y-0 md:space-x-6">
				<!-- Bloc Google Maps -->
				<div class="w-full md:w-2/3 bg-gray-50 p-6 rounded-lg">
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3978.3416367457873!2d15.30996217595712!3d-4.313276596866306!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1a6a321f2d1c17cd%3A0x853208c344c76c57!2s30%20Avenue%20des%20Forces%20Arm%C3%A9es%2C%20Gombe%2C%20Kinshasa%2C%20R%C3%A9publique%20D%C3%A9mocratique%20du%20Congo!5e0!3m2!1sen!2sfr!4v1636028833841!5m2!1sen!2sfr" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
				</div>

				<!-- Bloc Informations de Contact -->
				<div class="w-full md:w-1/3  p-6 rounded-lg space-y-4">
					<h3 class="text-xl font-semibold text-black">Coordonnées</h3>
					<p>
						<strong>Adresse:</strong><br>
						47 rue des Couronnes, 75020 Paris, France<br>
