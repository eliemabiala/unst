{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block javascripts %}
	{% block importmap %}
		{{ importmap('app') }}


	{% endblock %}
{% endblock %}


{% block body %}
	<div class="flex items-center justify-center min-h-screen bg-[#f0f0f0]">
		<div class="w-full max-w-md p-8 bg-white shadow-md rounded-lg">
			<h1 class="text-2xl font-semibold mb-6 text-center text-gray-800">Veuillez vous connecter</h1>

			<form method="post" class="space-y-4">


				{% if app.user %}
					<div class="mb-4 text-center text-gray-600">
						Vous êtes connecté en tant que
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}" class="text-blue-500 hover:underline">Déconnexion</a>
					</div>
				{% endif %}

				<div>
					<label for="username" class="block text-sm font-medium text-gray-700">Email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="email" required autofocus>
				</div>

				<div>
					<label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
					<input type="password" name="_password" id="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" autocomplete="current-password" required>
				</div>
				{% if error %}
					<div
						class="alert alert-danger mb-4 text-red-600">
						{# {{ error.messageKey|trans(error.messageData, 'security') }} #}
						Informations d'identification non valides

					</div>
				{% endif %}

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
																				                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																				                    See https://symfony.com/doc/current/security/remember_me.html
																				
																				                    <div class="flex items-center mb-4">
																				                        <input type="checkbox" name="_remember_me" id="_remember_me" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
																				                        <label for="_remember_me" class="ml-2 block text-sm text-gray-900">Se souvenir de moi</label>
																				                    </div>
																				                #}
				<div class="text-center">
<a href="{{ path('app_forgot_password_request') }}" class="text-sm text-blue-500 hover:underline">Mot de passe oublié ?</a>

				
				</div>

					<button type="submit" class="w-full py-2 px-4 bg-[#14213D] text-white font-semibold rounded-lg shadow-sm"> Se connecter
				</button>
			</form>
		</div>
	</div>
{% endblock %}
