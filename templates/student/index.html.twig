{# templates/student/index.html.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Mes Informations</title>
		<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
	</head>
	<body class="bg-gray-100 font-sans flex items-center justify-center min-h-screen p-6">
		<div class="w-full max-w-2xl bg-white shadow-lg rounded-lg overflow-hidden">
			<div class="p-6">
				<h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Mes Informations</h1>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4">
					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Nom :</span>
						<span class="w-2/3 text-gray-900">{{ name }}</span>
					</div>

					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Prénom :</span>
						<span class="w-2/3 text-gray-900">{{ firstname }}</span>
					</div>

					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Postnom :</span>
						<span class="w-2/3 text-gray-900">{{ postname }}</span>
					</div>

					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Email :</span>
						<span class="w-2/3 text-gray-900">{{ email }}</span>
					</div>

					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Téléphone :</span>
						<span class="w-2/3 text-gray-900">{{ phone }}</span>
					</div>

					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Date de Naissance :</span>
						<span class="w-2/3 text-gray-900">{{ date_of_birth ? date_of_birth|date('d/m/Y') : 'Non spécifiée' }}</span>
					</div>

					<div class="flex items-center font-semibold text-gray-700 border-b border-gray-200 py-2">
						<span class="w-1/3">Adresse :</span>
						<span class="w-2/3 text-gray-900">{{ address }}</span>
					</div>

					{% if status_demarches is not null %}
						<div class="flex items-center font-semibold text-gray-700 py-2">
							<span class="w-1/3">Statut des Démarches :</span>
							<span class="w-2/3 text-gray-900">{{ status_demarches }}</span>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</body>
</html>

