{% extends 'base.html.twig' %}

{% block title %}Nouveaux documents
{% endblock %}

{% block body %}
	<div class="container mx-auto py-8 mt-20 min-h-screen flex flex-col items-center px-4">
		<h1 class="text-2xl sm:text-3xl font-bold text-center text-[#14213D] mb-8">Créer un nouveau document</h1>

		<div class="bg-white shadow-lg rounded-lg p-6 sm:p-8 w-full max-w-md">
			{{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}

			<div class="mb-4 sm:mb-6">
				{{ form_label(form.file_path, 'Document', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
				{{ form_widget(form.file_path, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 focus:ring-[#14213D] focus:border-[#14213D]'}}) }}
				{{ form_errors(form.file_path, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
			</div>

			<div class="mb-4 sm:mb-6">
				{{ form_label(form.coach, 'Destinataire', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
				{{ form_widget(form.coach, {'attr': {'class': 'w-full border border-gray-300 rounded p-2 focus:ring-[#14213D] focus:border-[#14213D]'}}) }}
				{{ form_errors(form.coach, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
			</div>

			<div class="flex flex-col sm:flex-row justify-between mt-6 sm:mt-8 space-y-4 sm:space-y-0 sm:space-x-4">
				<a href="{{ path('app_documents_index') }}" class="bg-[#14213D] text-white py-2 px-4 text-center rounded hover:text-[#b49047] transition duration-300 w-full sm:w-auto" aria-label="Retour à la liste">
					Retour à la liste
				</a>
				<button type="submit" class="bg-[#14213D] text-white py-2 px-4 rounded hover:text-[#b49047] transition duration-300 w-full sm:w-auto">
					{{ button_label|default('Envoyer') }}
				</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

