<header class="header">
	<nav
		id="nav_header" class="nav_header">
		<!-- Logo -->
		<div class="logo">
			<img src="{{ asset('img/home/logo.png') }}" alt="Logo du site">
		</div>

		<!-- Menu Burger pour mobile -->
		<div class="burger">
			<img src="{{ asset('img/picture/burger.png') }}" alt="menu burger">
		</div>

		<!-- Navigation principale -->
		<div class="nav_links_container">
			<ul id="main-nav" class="nav_links">
				<li>
					<a class="nav_link" href="{{ path('home') }}">Accueil</a>
				</li>
				<li>
					<a class="nav_link" href="{{ path('app_service') }}">Services</a>
				</li>
				<li>
					<a class="nav_link" href="{{ path('app_about') }}">À propos</a>
				</li>
				<li>
					<a class="nav_link" href="{{ path('app_faq') }}">FAQ</a>
				</li>
				<li>
					<a class="nav_link" href="{{ path('app_contact') }}">Contact</a>
				</li>

				{% if app.user %}
					{% if 'ROLE_ADMIN' in app.user.roles %}
						<li>
							<a class="nav_link" href="{{ path('app_adminpage') }}">Espace Admin</a>
						</li>
					{% elseif 'ROLE_COACH' in app.user.roles %}
						<li>
							<a class="nav_link" href="{{ path('app_coachepage') }}">Espace COACH</a>
						</li>
					{% elseif 'ROLE_USER' in app.user.roles %}
						<li>
							<a class="nav_link" href="{{ path('app_student') }}">Espace Étudiant</a>
						</li>
					{% endif %}

					<!-- Bouton de déconnexion encapsulé dans un li -->
					<li>
						<button class="nav_button" onclick="window.location.href='{{ path('app_logout') }}'">Déconnexion</button>
					</li>
				{% else %}
					<!-- Bouton de connexion encapsulé dans un li -->
					<li>
						<button class="nav_button" onclick="window.location.href='{{ path('app_login') }}'">Se connecter</button>
					</li>
				{% endif %}
			</ul>
		</div>
	</nav>

	<!-- Deuxième navigation (menu burger), à utiliser pour les petits écrans -->
	<nav class="burg">
