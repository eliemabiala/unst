				<a href="{{ path('app_faq') }}">FAQ</a>

			</li>


			<li>
				<a href="{{ path('app_contact') }}">Contact</a>
			</li>


			{% if app.user %}
				{% if 'ROLE_ADMIN' in app.user.roles %}
					<li>
						<a class="nav_link" href="{{ path('app_adminpage') }}">Espace Admin</a>
					</li>
				{% elseif 'ROLE_COACH' in app.user.roles %}
					<li>
