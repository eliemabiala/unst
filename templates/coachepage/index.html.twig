{% extends 'base.html.twig' %}

{% block title %}Coach Page
{% endblock %}

{% block javascripts %}
	{% block importmap %}
		{{ importmap('app') }}
		{{ importmap('faq') }}
	{% endblock %}
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6 mt-20 mb-10">
		<!-- Changed 'mt-10' to 'mt-20' for more space at the top -->
		<!-- Added 'mt-20' for top margin and 'mb-10' for bottom margin -->
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6"> <!-- Card pour les Admins -->

			<!-- Card pour les Utilisateurs -->
				<div class="bg-gray-200 rounded-lg shadow-md p-4 flex items-center"> <div class="bg-[#14213D] text-white rounded-l-lg p-4">
					<img src="{{ asset('img/admin/iconuser.png') }}" alt="Icon User" class="w-8 h-8">
				</div>
				<div class="ml-4">
					<p class="text-sm font-medium">Effectif USER</p>
					<p class="text-3xl font-bold">{{ totalUser }}</p>
				</div>
			</div>

			<div class="bg-gray-200 rounded-lg shadow-md p-4 flex items-center">
				<div class="bg-[#14213D] text-white rounded-l-lg p-4">
					<img src="{{ asset('img/admin/message.png') }}" alt="Icon Message" class="w-8 h-8">
				</div>
				<div class="ml-4">
					<p class="text-sm font-medium">Messager</p>
				</div>
			</div>

			<a href="{{ path('app_myprofile') }}" class="bg-gray-200 rounded-lg shadow-md p-4 flex items-center">
				<div class="bg-[#14213D] text-white rounded-l-lg p-4">
					<img src="{{ asset('img/admin/iconcoache.png') }}" alt="Icon Profile" class="w-8 h-8">
				</div>
				<div class="ml-4">
					<p class="text-sm font-medium">Mon profil</p>
				</div>
			</a>
		</div>
	</div>

	<!-- Liste des Coachs -->
	<div
		class="overflow-x-auto max-h-96 mt-10 mb-10">
		<!-- Added 'mt-10' for top margin and 'mb-10' for bottom margin -->
		<table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
			<thead class="bg-gray-100 sticky top-0 z-10">
				<tr class="border-b">
					<th class="py-4 px-4 text-left text-gray-700">N°</th>
					<th class="py-4 px-4 text-left text-gray-700">Nom</th>
					<th class="py-4 px-4 text-left text-gray-700">Post Nom</th>
					<th class="py-4 px-4 text-left text-gray-700">Prénom</th>
					<th class="py-4 px-4 text-left text-gray-700">Email</th>
					<th class="py-2 px-4">
						<form
							class="max-w-xs mx-auto">
							<!-- Still using max-w-xs for a narrow width -->
							<label for="coach-search" class="mb-1 text-sm font-medium sr-only">Search</label>
							<!-- Reduced margin bottom -->
							<div class="relative">
								<input
								type="search" id="coach-search" class="w-full p-1 text-black rounded-lg border border-[#14213D] focus:outline-none" placeholder="Nom de coach" required/>
								<!-- Padding adjusted -->
								<button type="submit" class="text-white absolute right-1 top-1 bg-[#e74c3c] border-2 font-medium rounded-lg text-xs px-2 py-1">
									Search
								</button>
							</div>
						</form>
					</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					{% set profile = user.profile %}
					<tr class="border-b hover:bg-gray-50 cursor-pointer" role="button" tabindex="0" onclick="window.location='{{ path('app_coach_profile', { id: user.id }) }}';">
						<td class="py-2 px-4">{{ loop.index }}</td>
						<td class="py-2 px-4">{{ profile.name }}</td>
						<td class="py-2 px-4">{{ profile.postname }}</td>
						<td class="py-2 px-4">{{ profile.firstname }}</td>
						<td class="py-2 px-4">{{ user.email }}</td>
						<td class="py-2 px-4">
							<div class="flex space-x-2">
								<a href="{{ path('app_coach_profile', { id: user.id }) }}">
									<img src="{{ asset('img/admin/invisible.png') }}" alt="Icon invisible" title="Voir plus" aria-label="Invisible appuiyé pour voir plus" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
								</a>
								<a href="{{ path('app_edit', { id: user.id }) }}">
									<img src="{{ asset('img/admin/messager.png') }}" alt="Icon message" title="Envoyer un message" aria-label="Envoyer un message" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
								</a>
								<a href="{{ path('app_appointment_new', { email: user.email }) }}">
									<img src="{{ asset('img/admin/addrdv.png') }}" alt="Ajouter un rendez-vous" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
								</a>
								<a href="{{ path('app_edit', { id: user.id }) }}">
									<img src="{{ asset('img/admin/edit.png') }}" alt="Icon edit" title="Modifier le profil" aria-label="Modifier le profil" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
								</a>
								<form action="{{ path('app_user_delete', { id: user.id }) }}" method="post" style="display:inline;">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
									<button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" class="text-red-600">
										<img src="{{ asset('img/admin/delete.png') }}" alt="Icon delete" title="Supprimer l'utilisateur" aria-label="Supprimer l'utilisateur" class="inline w-6 h-6 sm:w-4 sm:h-4 mx-1"/>
									</button>
								</form>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>{% endblock %}

