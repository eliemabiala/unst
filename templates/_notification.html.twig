<div class="fixed top-4 right-4 max-w-sm w-full border{% if label == 'success' %} bg-custom-blue border-blue-400 text-white {% else %} bg-red-100 border border-red-400 text-red-700 {% endif %} px-4 py-3 rounded shadow-lg" role="alert">
	{% if message is iterable and message.title is defined %}
		<strong class="font-bold">{{ message.title }}</strong>
		<span class="block sm:inline">{{ message.message }}</span>
	{% else %}
		<span class="block sm:inline">{{ message }}</span>
	{% endif %}
	<button type="button" class="absolute top-0 right-0 px-4 py-3" onclick="this.parentElement.style.display='none';">
		<svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
			<title>Close</title>
			<path d="M14.348 14.849a1 1 0 01-1.414 0L10 11.414l-2.934 2.935a1 1 0 01-1.414-1.415l2.935-2.934-2.935-2.934a1 1 0 011.414-1.415L10 8.586l2.934-2.935a1 1 0 011.414 1.415L11.414 10l2.934 2.934a1 1 0 010 1.415z"/>
		</svg>
	</button>
</div>
